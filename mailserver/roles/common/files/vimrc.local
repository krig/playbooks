set nocompatible
filetype indent plugin on
syntax on

set hidden
set wildmenu
set showcmd
set hlsearch
set ignorecase
set smartcase
set backspace=indent,eol,start
set autoindent
set nostartofline
set ruler
set visualbell
set t_vb=
set mouse=a
set number
set notimeout ttimeout ttimeoutlen=200
set pastetoggle=<F11>
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab
set showmatch
set incsearch
set textwidth=99
set background=dark

au BufNewFile,BufRead *.yaml,*.yml so /etc/vim/yaml.vim

